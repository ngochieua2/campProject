<% layout('layouts/layout') %> 
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" id="title" name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location:</label>
                <input class="form-control" type="text" name="campground[location]" id="location">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL:</label>
                <input class="form-control" type="text" name="campground[image]" id="image">
            </div>
            <div class="mb-3"> 
                <label class="form-label" for="price">Campground Price:</label>   
                <div class="input-group">
                    <span class="input-group-text" id="price-span">$</span>
                    <input type="text" id='price' name="campground[price]" class="form-control" 
                    placeholder="0.00" aria-label="price" aria-describedby="price-span">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description: </label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campground">All Campgrounds</a>
    </div>
</div>